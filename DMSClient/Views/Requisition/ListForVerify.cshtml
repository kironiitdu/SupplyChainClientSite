        <script type="text/javascript">
            $(document).ready(function () {

                var userId = '@userId';
                @*var partyTypeId = '@partyTypeId';*@
                @*var roleId=@roleId;*@
                var partyId=@partyId;

                //$('#context').addClass('animated rollIn');
                var dataSource = new kendo.data.DataSource({
                    pageSize: 20,
                    transport: {
                        read: {
                            url: "@UrlConfig.Action("GetRequisitionForVerifyByPartyId", "Requisition")?party_id="+partyId+"",
                            type: "GET"
                        },
                        update: {
                            url: "@UrlConfig.Action("Put", "Requisition")",
                            type: "PUT",
                            complete: function (e) {
                                jQuery("#grid").data("kendoGrid").dataSource.read();
                            }
                        },

                    },
                  
                    autoSync: false,
                    schema: {
                        errors: function (e) {
                            console.log(e.errors);
                            //alert(e.error);
                            if (e.output === "error") {
                                console.log(e.output);
                                //KendoWindowFunction(e.msg, "error", "");
                                // this.cancelChanges();
                            }

                        },

                        model: {
                            id: "requisition_master_id",
                            fields: {
                                requisition_master_id: { editable: false, nullable: true },
                                //party_id: { type: "string" },
                                party_name: { type: "string" },
                                requisition_code: { type: "string" },
                                requisition_type: { type: "string" },
                                status: { type: "string" },
                                expected_receiving_date: { type: "string" },
                                warehouse_name: { type: "string" },
                                amount: { type: "string" },
                                requisition_date: { type: "date" },
                                deposite_date: { type: "date" }
                            }

                        }
                    }

                });
                function verifyRequisition(e) {
                    e.preventDefault();
                    var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
                    var requisitionMasterId = dataItem.requisition_master_id;
                    $.ajax({
                        type: "GET",
                        url: "@UrlConfig.Action("UpdateApproveStatus", "Requisition")",
                        data: { requisitionId: requisitionMasterId },//Passing parameter
                        dataType: "json",
                        contentType: "application/json",
                        success: function (data) {
                            Loading(false);
                            console.log(data);
                            if (data.output === "success") {

                                swal("Success", data.msg, "success");
                                return false;
                            } else {
                                swal("Exception", data.msg, "error");
                                return false;
                            }
                        }
                    });

                }
                function forwardToHOS(e) {
                    e.preventDefault();
                    var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
                    var requisitionMasterId = dataItem.requisition_master_id;
                    $.ajax({
                        type: "GET",
                        url: "@UrlConfig.Action("ProceedToHOS", "Requisition")",
                        data: { requisition_master_id: requisitionMasterId, userid: userId },//Passing parameter
                    dataType: "json",
                    success: function (data) {
                        Loading(false);
                        console.log(data);
                        if (data.output === "success") {

                            swal("Success", data.msg, "success");
                            window.location.href = '/Requisition/ListForVerify';
                            return false;
                        } else {
                            swal("Exception", data.msg, "error");
                            return false;
                        }
                    }
                });

            }
                jQuery("#grid").kendoGrid({
                    dataSource: dataSource,
                    scrollable: true,
                    filterable: true,
                    pageable: {
                        refresh: true,
                        input: true,
                        pageSize: 20,
                        numeric: false,
                        pageSizes: [10, 20, 50]
                    },

                    sortable: true,
                    groupable: true,
                    resizable: true,


                    columns: [
                        { field: "requisition_master_id", hidden: true },
                        { field: "requisition_code", title: "Requisition No", id: "requisition_master_id", width: "110px" },
                        { field: "requisition_type", title: "Req Type",  width: "120px" },
                        { field: "party_name", title: "Channel Name", width: "130px" },
                        { field: "requisition_date", title: "Req Date", width: "150px", template: "#= kendo.toString(kendo.parseDate(requisition_date,'yyyy/MM/dd hh:mm:ss'), 'dd/MM/yyyy HH:mm:ss tt') #" },
                        { field: "payment_status", title: "Payment Status", width: "125px" },
                        { field: "amount", title: "Req Amount", width: "90px" },
                        { field: "verify_status", title: "Payment Verified", width: "110px" },
                        { field: "status", title: "Acc Status", width: "100px" },//accounts status
                        { field: "finance_status", title: "Sales Status", width: "95px" },//sales status
                        { field: "deposite_date", title: "Deposit Date", width: "150px", template: "#= kendo.toString(kendo.parseDate(deposite_date,'yyyy/MM/dd hh:mm:ss'), 'dd/MM/yyyy HH:mm:ss tt') #"},
                        //{ field: "forwarded_status", title: "Forward Status", width: "110px" },
                        {
                            title: "Fwd to HOS", width: "75px",
                            template: kendo.template($("#approve-template").html())
                        },
                        { command: { text: "Forward", click: forwardToHOS }, title: "Fwd to HOOps", width: "1px", hidden:true },
                        {
                            title: "Action", width: "60px",
                            template: kendo.template($("#report-template").html())
                        }],
                    dataBound: function (e) {
                        var grid = $("#grid").data("kendoGrid");
                        var gridData = grid.dataSource.view();

                        for (var i = 0; i < gridData.length; i++) {
                            var currentUid = gridData[i].uid;
                            var currenRow = grid.table.find("tr[data-uid='" + currentUid + "']");

                            var approvedSalesButton = $(currenRow).find(".approved");
                            if (gridData[i].payment_status==="With Payment" && gridData[i].verify_status === "Not Verified") {
                                approvedSalesButton.hide();
                            }
                    //        if (gridData[i].verify_status === "Verified") {
                    //            $("#grid tbody").find("tr[data-uid=" + currenRow + "]").color = green;
                    //        }
                    ////        var approvedSalesButton = $(currenRow).find(".approved");
                    ////        var editButtonApproved = $(currenRow).find(".edit");
                    ////        var approveFinanceButton = $(currenRow).find(".financeapproved");

