            //window.open(url, '_blank');
            
            Loading(true);
            $.ajax({
                type: "GET",
                url: "@UrlConfig.Action("GetDailySalesReport", "DailySales")",
                data: {  party_id: partyId, from_date: fromDate, to_date: toDate },
                dataType: "json",
