    $(function () {
        Loading(true);
        customerTab = $("#customerTab").kendoTabStrip({}).data("kendoTabStrip");
        customerTab.enable(customerTab.tabGroup.children("li:eq(1)"), false);
        customerTab.enable(customerTab.tabGroup.children("li:eq(2)"), false);
        customerTab.enable(customerTab.tabGroup.children("li:eq(3)"), false);
        customerTab.enable(customerTab.tabGroup.children("li:eq(4)"), false);
