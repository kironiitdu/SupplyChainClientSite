                        url: "@UrlConfig.Action("GetReturnType", "Return")"
                    }
                }
            }

        });
        $("#party_id").kendoComboBox({
            autoBind: false,
            placeholder: "--- Select Party ---",
            dataTextField: "party_name",
            dataValueField: "party_id",
