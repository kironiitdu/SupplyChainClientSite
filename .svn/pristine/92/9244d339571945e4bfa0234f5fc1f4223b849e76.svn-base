
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-success" id="context">
    <div class="panel-heading"><h4>Add Zone</h4></div>
    <div class="panel-body">
        <div id="grid"></div>
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        $('#context').addClass('animated zoomIn');
        var dataSource = new kendo.data.DataSource({
            pageSize: 20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllZone", "Zone")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "Zone")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete", "Zone")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "Zone")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                        KendoWindowFunction(e.msg, "error", "");
                        this.cancelChanges();
                    }
                },

                model: {
                    id: "zone_id",
                    fields: {
                        zone_id: { editable: false, nullable: true },
                        zone_name: { type: "string", validation: { required: true } },
                        zone_details: { type: "string" }
          
                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add New Zone" }],
            columns: [
                { field: "zone_name", title: "Zone Name", id: "zone_id", width: "100px" },
                  { field: "zone_details", title: "Zone Details", width: "100px" },
                { command: ["edit", "destroy"], title: "Action", width: "100px" }],
            editable: "inline"
        });




    });


</script>



<div id="kWindow"></div>


