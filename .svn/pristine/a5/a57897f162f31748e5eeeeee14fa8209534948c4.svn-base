<script type="text/javascript">
    $(document).ready(function () {

        var supplier_id = '@ViewBag.supplierId';
        Loading(true);
        $.ajax({
            type: "POST",
            url: "@UrlConfig.Action("GetSupplierById", "Supplier")",
            data: {
                supplier_id: supplier_id
            },
            dataType: "json",
            success: function (data) {
                Loading(false);
                console.log(supplier_id);
                $("#supplier_name").val(data.supplier_name);
                $("#supplier_code").val(data.supplier_code);
                $("#supplier_type_id").val(data.supplier_type_id);
                $("#company_address").val(data.company_address);
                $("#factory_address").val(data.factory_address);
                $("#phone").val(data.phone);
                $("#mobile").val(data.mobile);
                $("#email").val(data.email);
                $("#email2").val(data.email2);              
                $("#contact_person").val(data.contact_person);
                $("#contact_person2").val(data.contact_person2);
                $("#vat_id").val(data.vat_id);
                $("#tin_no").val(data.tin_no);
                $("#is_active").val(data.is_active);

                var kkk = data.is_active;
                if (kkk === true) {
                    $('#is_active').prop('checked', true);
                }
                else {
                    $('#is_active').prop('checked', false);
                }

               
                    

            }
        });
    });
</script>

