<!--Javascript and Ajax to Submit the Form-->
<script type="text/javascript">

    //date time picker
    $(document).ready(function () {

        $("#supplier_type_id").kendoComboBox({
            autoBind: true,
            placeholder: "--- Select Supplier type ---",
            dataTextField: "supplier_type_name",
            dataValueField: "supplier_type_id",
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "@UrlConfig.Action("GetSupplierTypeListForDropDown", "SupplierType")"
                }
            }
        }
        });

        $("#btnUpdateSupplier").click(function () {
            Loading(true);
            
            $("#supplier_type_id").kendoComboBox({
                autoBind: true,
                placeholder: "--- Select Supplier type ---",
                dataTextField: "supplier_type_name",
                dataValueField: "supplier_type_id",
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "@UrlConfig.Action("GetSupplierTypeListForDropDown", "SupplierType")"
                    }
                }
            }
            });

            var supplier_id = '@ViewBag.supplierId';
            var supplier_name = $("#supplier_name").val();
            var supplier_code = $("#supplier_code").val();
            var supplier_type_id = $("#supplier_type_id").val();
            var company_address = $("#company_address").val();
            var factory_address = $("#factory_address").val();
            var phone = $("#phone").val();
            var mobile = $("#mobile").val();
            var email = $("#email").val();
            var email2 = $("#email2").val();
            var contact_person = $("#contact_person").val();
            var contact_person2 = $("#contact_person2").val();       
            var vat_id = $("#vat_id").val();
            var tin_no = $("#tin_no").val();
            var updated_by=@userId;
            var is_active = false;
            if ($("#is_active").is(':checked')) {
                is_active = true;
            }

            var supplier = {

                supplier_id:supplier_id,
                supplier_name: supplier_name,
                supplier_code: supplier_code,
                supplier_type_id:supplier_type_id,
                company_address: company_address,
                factory_address: factory_address,
                phone: phone,
                mobile: mobile,
                email: email,
                email2:email2,
                contact_person: contact_person,
                contact_person2:contact_person2,
                vat_id: vat_id,
                tin_no: tin_no,
                is_active: is_active,
                updated_by:updated_by
            };
            $.ajax({
                type: "PUT",
                url: "@UrlConfig.Action("Put", "Supplier")",
                data: JSON.stringify(supplier),
                dataType: "json",
                contentType: "application/json",
                success: function (data) {
                    Loading(false);
                    console.log(data);

                    if (data.output === "success") {
                        sweetAlert("Yes...", data.msg, "success");
                        setTimeout(function () {
                            window.location.href = '/Supplier/index';
                        }, 1000);
                        return false;
                    } else {
                        sweetAlert("Sorry...", data.msg, "error");
                        return false;
                    }
                }
            });




        });
    });





</script>