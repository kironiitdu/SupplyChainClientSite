    $(document).ready(function () {
        $('#context').addClass('animated flipInX');
        $('#chk_pass').click(function () {
            if ($(this).is(':checked')) {
                $("#reset_pass").show(500);
            }
            else {
                $("#reset_pass").hide(500);
                $("#password").val("");
                $("#confirm_password").val("");
