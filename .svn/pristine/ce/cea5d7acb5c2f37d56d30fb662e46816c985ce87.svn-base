
@{
    ViewBag.Title = "Index";
}

<div id="grid"></div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize:20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("GetAllCouriers", "Courier")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "Courier")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                        swal("", e.responseJSON.msg, e.responseJSON.output);
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete", "Courier")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "Courier")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                        swal("", e.responseJSON.msg, e.responseJSON.output);
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                        sweetAlert("Sorry...", e.msg, "error");
                       this.cancelChanges();
                   }
                },

                model: {
                    id: "courier_id",
                    fields: {
                        courier_id: { editable: false, nullable: true },
                        courier_name: { type: "string", validation: { required: true } },
                        cell: { type: "string"}

                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add Courier" }],
            columns: [
                { field: "courier_name", title: "Courier Name", id: "courier_id", width: "150px" },
                { field: "cell", title: "Cell", width: "150px" },
                { command: ["edit", "destroy"], title: "Action", width: "230px" }],
            editable: "inline"
        });

    });


</script>



<div id="kWindow"></div>
