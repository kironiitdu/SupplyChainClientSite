@{

}
<div id="grid"></div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize:20,
            transport: {
                read: {
                    url: "@UrlConfig.Action("getallcontry", "Country")",
                    type: "GET"
                },
                update: {
                    url: "@UrlConfig.Action("Put", "Country")",
                    type: "PUT",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                },
                destroy: {
                    url: "@UrlConfig.Action("Delete","Country")",
                    type: "DELETE"
                },
                create: {
                    url: "@UrlConfig.Action("Post", "Country")",
                    type: "POST",
                    complete: function (e) {
                        jQuery("#grid").data("kendoGrid").dataSource.read();
                    }
                }
            },
            //    code: "Ok",
            autoSync: false,
            schema: {
                errors: function (e) {
                    console.log(e.errors);
                    //alert(e.error);
                    if (e.output === "error") {
                        console.log(e.output);
                       //KendoWindowFunction(e.msg, "error", "");
                      // this.cancelChanges();
                   }
                },

                model: {
                    id: "country_id",
                    fields: {
                        country_id: { editable: false, nullable: true },
                        country_name: { type: "string", validation: { required: true }},
                        country_details: { type: "string" },
               
                    }

                }
            }

        });
        jQuery("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: true,
            pageable: {
                refresh: true,
                input: true,
                pageSize: 20,
                numeric: false,
                pageSizes: [10, 20, 50]
            },
            sortable: true,
            groupable: true,
            resizable: true,

            toolbar: [{ name: "create", text: "Add Country" }],
            columns: [
                { field: "country_name", title: "Country Name", id: "country_id", width: "150px" },
                { field: "country_details", title: "Country Details", width: "150px" },
                { command: ["edit", "destroy"], title: "Action", width: "230px" }],
            editable: "inline"
        });
    });
</script>
<div id="kWindow"></div>

